#!/bin/bash

#Gocode
go get -u -v github.com/nsf/gocode
go install -v github.com/nsf/gocode

#Goimport
go get -u -v golang.org/x/tools/
go install -v golang.org/x/tools/cmd/goimports

#Godef
go get -u -v code.google.com/p/rog-go/exp/cmd/godef
go install -v code.google.com/p/rog-go/exp/cmd/godef

#Gotags
go get -u -v github.com/jstemmer/gotags
go install -v github.com/jstemmer/gotags

#Golint
go get -u -v github.com/golang/lint
go install -v github.com/golang/lint

#GoConvey
go get -u -v github.com/smartystreets/goconvey

#Google Api GO Client
go get -u -v code.google.com/p/google-api-go-client

#Godev editor
go get -u -v github.com/sirnewton01/godev
go install -v github.com/sirnewton01/godev
go get -u -v github.com/sirnewton01/godbg

#GoTTy
go get -u -v github.com/yudai/gotty
go install github.com/yudai/gotty

#Whenchange
go get -u -v ronoaldo.gopkg.net/whenchange
go install -v ronoaldo.gopkg.net/whenchange

#Batterymon
go get -u -v ronoaldo.gopkg.net/batterymon
go install -v ronoaldo.gopkg.net/batterymon
