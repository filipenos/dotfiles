root=true

# Default conventions
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_size = 4

# Makefiles must use tabs
[**/Makefile]
indent_style = tab
tab_size = 4

[**.xml]
indent_style = tab
tab_size = 2

[**{.js,.coffee}]
indent_style = space
indent_size = 4

[**.py]
indent_style = space
indent_size = 4

[**vimrc]
indent_style = space
indent_size = 2

[**.{yaml,yml}]
indent_style = space
indent_size = 2
